<header>
    <!-- Logo -->
    <div class= "header-items">
    <a href="/index"> <img id="logo" src="/images/logo.png" alt="Company Logo"></a>
    </div>
    <!-- Navigation bar -->
    <div class= "header-items">
        <nav id="navigation">
            {% set navPages = collections.all | eleventyNavigation %}
            <ul id="menu">
                {%- for entry in navPages %}
                <li{% if entry.url == page.url %} class="active" {% endif %}>
                    {% if entry.title != "Contact" %}     
                        <a href="{{ entry.url | url }}"> {% if entry.title == "Home" %} <span class="material-symbols-rounded">home</span> {% else %} {{  entry.title  }}{% endif %}</a> 
                    {% endif %}
                </li>
                {%- endfor %}
            </ul>
        </nav>
    </div>
    <!-- Contact Button -->
    <div class= "header-items">
        {%- for entry in navPages %}
            {% if entry.title == "Contact" %}     
                <a href="{{ entry.url | url }}"><button{% if entry.url == page.url %} class="btactive" {% else %} class="normal" {% endif %}>{{ entry.title }}</button></a> 
            {% endif %}
        {%- endfor %}
    </div>    
</header>